@model Payne.ViewModels.Account.ResetPasswordVm

<!-- Breadcrumb area Start -->
<section class="page-title-area bg-color" data-bg-color="#f4f4f4">
    <div class="container">
        <div class="row">
            <div class="col-12 text-center">
                <h1 class="page-title">Reset Password</h1>
                <ul class="breadcrumb">
                    <li><a href="/">Home</a></li>
                    <li class="current"><span>Reset Password</span></li>
                </ul>
            </div>
        </div>
    </div>
</section>
<!-- Breadcrumb area End -->

<!-- Main Content Wrapper Start -->
<div class="main-content-wrapper">
    <div class="page-content-inner pt--75 pb--80">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6">
                    <div class="login-box">
                        <h3 class="heading__tertiary mb--30">Reset Password</h3>
                        <form class="form form--login" method="post" asp-action="ResetPassword" asp-controller="Auth">
                            <div class="form__group mb--20">
                                <label class="form__label" asp-for="NewPassword">New Password <span
                                        class="required">*</span></label>
                                <input asp-for="NewPassword" type="password" class="form__input"
                                       placeholder="Enter new password">
                                <span asp-validation-for="NewPassword" class="text-danger"></span>
                            </div>

                            <div class="form__group mb--20">
                                <label class="form__label" asp-for="ConfirmNewPassword">Confirm New Password <span
                                        class="required">*</span></label>
                                <input asp-for="ConfirmNewPassword" type="password" class="form__input"
                                       placeholder="Confirm new password">
                                <span asp-validation-for="ConfirmNewPassword" class="text-danger"></span>
                            </div>

                            <div class="d-flex align-items-center mb--20">
                                <div class="form__group mr--30">
                                    <input type="submit" value="Submit" class="btn btn-size-sm">
                                </div>
                            </div>

                            <a class="forgot-pass" asp-action="Login" asp-controller="Auth">Back to Login</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Main Content Wrapper End -->