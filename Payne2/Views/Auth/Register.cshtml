@model Payne.ViewModels.Account.RegisterVm
<!-- Breadcrumb area Start -->
<section class="page-title-area bg-color" data-bg-color="#f4f4f4">
    <div class="container">
        <div class="row">
            <div class="col-12 text-center">
                <h1 class="page-title">Register</h1>
                <ul class="breadcrumb">
                    <li><a href="/">Home</a></li>
                    <li class="current"><span>Register</span></li>
                </ul>
            </div>
        </div>
    </div>
</section>
<!-- Breadcrumb area End -->

<!-- Main Content Wrapper Start -->
<div class="main-content-wrapper">
    <div class="page-content-inner pt--75 pb--80">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6">
                    <div class="register-box">
                        <h4 class="heading__tertiary mb--30">Register</h4>
                        <form method="post">
                            <div class="form__group mb--20">
                                <label class="form__label" asp-for="UserName">User Name
                                    <span class="required">*</span></label>
                                <input asp-for="UserName" class="form__input">
                                <span asp-validation-for="UserName" style="color: red"></span>
                            </div>
                            <div class="form__group mb--20">
                                <label class="form__label" asp-for="Name">Name
                                    <span class="required">*</span></label>
                                <input asp-for="Name" class="form__input">
                                <span asp-validation-for="Name" style="color: red"></span>
                            </div>
                            <div class="form__group mb--20">
                                <label class="form__label" asp-for="Surname">Surname
                                    <span class="required">*</span></label>
                                <input asp-for="Surname" class="form__input">
                                <span asp-validation-for="Surname" style="color: red"></span>
                            </div>
                            <div class="form__group mb--20">
                                <label class="form__label" asp-for="Email">Email address
                                    <span class="required">*</span></label>
                                <input asp-for="Email" class="form__input">
                                <span asp-validation-for="Email" style="color: red"></span>
                            </div>
                            <div class="form__group mb--20">
                                <label class="form__label" asp-for="Password">Password
                                    <span class="required">*</span></label>
                                <input asp-for="Password" class="form__input">
                                <span asp-validation-for="Password" style="color: red"></span>
                            </div>
                            <div class="form__group mb--20">
                                <label class="form__label" asp-for="ConfirmPassword">Confirm Password
                                    <span class="required">*</span></label>
                                <input asp-for="ConfirmPassword" class="form__input">
                                <span asp-validation-for="ConfirmPassword" style="color: red"></span>
                            </div>
                            <div asp-validation-summary="All"></div>
                            <div class="form__group">
                                <input type="submit" value="Register" class="btn btn-size-sm">
                            </div>
                            <a class="forgot-pass" asp-action="Login" asp-controller="Auth">Already have an account?</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Main Content Wrapper Start -->